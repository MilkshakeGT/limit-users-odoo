<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_inherit_user_limit" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.user.limit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <div class="app_settings_block" data-string="Límite de Usuarios" string="Límite de Usuarios" data-key="user_limit" groups="user_limit.group_user_limit_super_admin">
                        <h2>Configuración de Usuarios</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="user_limit"/>
                                    <div class="text-muted">
                                        Establece el número máximo de usuarios activos permitidos.
                                    </div>
                                    <div class="content-group mt16">
                                        <div class="row">
                                            <label for="user_limit" class="col-lg-3 o_light_label"/>
                                            <field name="user_limit" class="oe_inline"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
